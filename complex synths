

att = 0
sus = 0.1
rel = 0.5
amp = 1

use_bpm 90

define :syn do |note|
  use_synth_defaults attack: att, sustain: sus, release: rel, apmlitude: amp
  synth :saw, note: note
  synth :saw, note: note + 0.2
end

with_fx :compressor do
  live_loop :tarkus do
    syn (ring :f3,:bb3,:eb4,:bb3,:gs4,:bb3,:e4,:bb3,:es4).tick
    sleep 0.25
  end
end


